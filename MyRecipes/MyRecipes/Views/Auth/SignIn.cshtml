@model MyRecipes.ViewModels.SignInModel

@{ 
    ViewBag.Title = "Sign In";
}

<div class="row justify-content-center m-4">
    <form class="col-3" asp-controller="Auth" asp-action="SignIn" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="text" asp-for="Username" class="form-control" required placeholder="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" asp-for="Password" class="form-control" required placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" asp-for="IsPersistent" class="form-check-input" />
            <label class="form-check-label" asp-for="IsPersistent">Keep me logged in</label>
        </div>
        <div class="form-group">
            <input type="submit" value="Sign In" class="btn btn-primary" />
        </div>
    </form>
</div>

